@model IEnumerable<ProjCars.Models.Cars.CarsIndexViewModel>

@{
  ViewData["Title"] = "Cars";
}

<div class="d-flex align-items-center justify-content-between mb-3">
  <div>
    <h2 class="mb-0">Cars</h2>
    <div class="text-muted small">Manage your cars list</div>
  </div>

  <a asp-action="Create" class="btn btn-primary">
    + Create
  </a>
</div>

<div class="card shadow-sm">
  <div class="table-responsive">
    <table class="table table-hover align-middle mb-0">
      <thead class="table-light">
        <tr>
          <th>Brand</th>
          <th>Model</th>
          <th style="width: 110px;">Year</th>
          <th>Engine</th>
          <th class="text-end" style="width: 140px;">Price</th>
          <th class="text-end" style="width: 260px;">Actions</th>
        </tr>
      </thead>

      <tbody>
      @if (Model == null || !Model.Any())
      {
        <tr>
          <td colspan="6" class="text-center text-muted py-4">
            No cars yet. Click <strong>Create</strong> to add the first one.
          </td>
        </tr>
      }
      else
      {
        foreach (var car in Model)
        {
          <tr>
            <td class="fw-semibold">@car.Brand</td>
            <td>@car.Model</td>
            <td>@car.Year</td>
            <td>@car.Engine</td>
            <td class="text-end">@car.Price.ToString("0.00")</td>
            <td class="text-end">
              <div class="d-inline-flex gap-2">
                <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-sm btn-outline-secondary">
                  Details
                </a>
                <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-sm btn-outline-primary">
                  Edit
                </a>
                <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-sm btn-outline-danger">
                  Delete
                </a>
              </div>
            </td>
          </tr>
        }
      }
      </tbody>
    </table>
  </div>
</div>
